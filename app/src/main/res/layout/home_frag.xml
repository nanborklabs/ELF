<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="12dp"

    android:layout_marginRight="12dp"
    android:layout_height="@dimen/user_profile_height">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_height="@dimen/user_profile_height">

            <!--Title Board Text-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/user_board"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="@dimen/baord_textsize"

                android:text="SAMACHEER KALVI"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_below="@id/user_board"
                android:orientation="horizontal"
                android:id="@+id/ll_cv"
                android:weightSum="5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/user_logo"

                    android:layout_weight="0.5"
                    android:src="@drawable/ic_menu_gallery"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:text="User Name"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/username"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/std_logo"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_menu_gallery"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:text="standard"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/std"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_below="@id/user_board"
                android:orientation="horizontal"
                android:id="@+id/ll2_cv"
                android:weightSum="5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/school_logo"

                    android:layout_weight="0.5"
                    android:src="@drawable/ic_menu_gallery"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:text="School Name"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/school_name"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/loc_log"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_menu_gallery"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="Location"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/location"/>



            </LinearLayout>




        </LinearLayout>




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>
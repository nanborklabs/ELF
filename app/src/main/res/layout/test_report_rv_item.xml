<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="160dp"
    android:layout_margin="4dp"
    android:background="#f87373">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f46a6a">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="TrignoMentry"
            android:id="@+id/test_report_item_topic_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Percentage : "
            android:id="@+id/textView9"

            android:textSize="22sp"

            android:textColor="#363735"
            android:layout_alignBaseline="@+id/test_report_item_status"
            android:layout_alignBottom="@+id/test_report_item_status"
            android:layout_alignLeft="@+id/test_report_item_subject_name"
            android:layout_alignStart="@+id/test_report_item_subject_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="52"
            android:id="@+id/test_report_item_percent"
            android:textSize="22sp"
            android:layout_alignTop="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:layout_marginLeft="8dp"
            android:layout_alignRight="@+id/test_report_item_topic_name"
            android:gravity="center"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Passed"
            android:id="@+id/test_report_item_status"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp"
            android:textSize="24sp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maths"
            android:id="@+id/test_report_item_subject_name"
            android:layout_below="@+id/test_report_item_topic_name"
            android:layout_alignLeft="@+id/test_report_item_topic_name"
            android:layout_alignStart="@+id/test_report_item_topic_name"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:layout_marginTop="4dp"
            android:textColor="#363735" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">


    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="imgview_icon_style" parent="AppTheme">

        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">@dimen/img_icon_padding</item>
    </style>

    <style name="tv_dash" parent="AppTheme">
        <item name="android:textSize">@dimen/tv_dash_textsize</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="tv_login_page">
        <item name="android:ems">200</item>
        <item name="android:textSize">@dimen/login_page_text_size</item>
    </style>

    <style name="test_parent_tv">

        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/test_parent_tvsize</item>
    </style>

    <style name="radio_button">


        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_radio_button</item>
        <item name="android:foreground">@drawable/ripple</item>

        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:button">@null</item>


    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
